<?xml version="1.0" encoding="utf-8"?>
<!-- Copied from FigureTen for integration -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#BDC3C7"
    android:padding="24dp">

    <TextView
        android:id="@+id/textPreferredUnits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PREFERRED WEIGHT UNITS"
        android:textColor="#1E2D3D"
        android:textSize="30sp"
        android:textStyle="bold"
        android:fontFamily="@font/roboto_font"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:layout_gravity="center_horizontal" />

    <Button
        android:id="@+id/buttonKg"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:text="Kg"
        android:textColor="#FFFFFF"
        android:background="@drawable/rounded_button"
        android:textSize="22sp"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/buttonLbs"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:text="Lbs"
        android:textColor="#FFFFFF"
        android:background="@drawable/rounded_button"
        android:textSize="22sp"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/buttonContinue"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:text="Continue"
        android:textColor="#FFFFFF"
        android:backgroundTint="#C0392B"
        android:background="@drawable/rounded_button"
        android:textSize="18sp"
        android:layout_marginTop="15dp" />
</LinearLayout>
